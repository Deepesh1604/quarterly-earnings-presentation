def calculate_var(portfolio_value, confidence_level=0.95, time_horizon=1):
    """
    Calculate Value at Risk using Monte Carlo simulation
    """
    import numpy as np
    
    # Historical volatility (annualized)
    volatility = 0.18
    
    # Generate random returns
    returns = np.random.normal(0, volatility/np.sqrt(252), 10000)
    
    # Calculate portfolio returns
    portfolio_returns = portfolio_value * returns
    
    # Calculate VaR at specified confidence level
    var = np.percentile(portfolio_returns, (1 - confidence_level) * 100)
    
    return abs(var)

# Current portfolio VaR (95% confidence)
current_var = calculate_var(portfolio_value=50_000_000_000)
print(f"Daily VaR (95%): ${current_var:,.2f}")
                </code></pre>
